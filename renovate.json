{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabledManagers": [
    "sbt"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "sbt-package"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "groupName": "sbt dependencies"
    }
  ]
}
